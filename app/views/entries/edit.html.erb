<div class="edit-container">
<%= form_with model: @entry do |form| %>
<div class="title-input">
<%= form.label "Title:" %>
<%= form.text_field :title %>
</div>
<div class="body-input">
<%= form.label "Body:" %>
<%= form.text_field :body %>
</div>
<div class="submit">
<%= form.submit "Update Entry"%>
</div>
<% end %>

<%= link_to "Show all entries", "/entries" %>
</div>